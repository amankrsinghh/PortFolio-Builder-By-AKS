<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background">



    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:elevation="10dp">




        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/pfbg"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/update"
                    android:layout_width="34dp"
                    android:layout_height="36dp"
                    android:src="@drawable/edit"
                    android:layout_marginRight="200dp"
                    android:layout_weight="1"
                    android:layout_gravity="start"/>
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="34dp"
                    android:layout_height="36dp"
                    android:src="@drawable/delete"
                    android:layout_weight="1"
                    android:layout_gravity="end"/>
            </LinearLayout>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profilepic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:src="@drawable/circle_background"
                app:shapeAppearanceOverlay="@style/CircleImageView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:text="Job Title"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/user_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:text="Loctaion"
                    android:textColor="#000000"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/about_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Me"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/about_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A brief description about yourself, your goals, and professional experience."
                    android:maxLength="200"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/skills_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/user_skill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Android Development"
                    android:textSize="14sp"
                    android:textColor="#555555" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="7dp">
                    <TextView
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#000000"
                        android:layout_marginRight="8dp"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/user_phoneno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone No"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/shareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F44336"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:text="Share"/>
        <Button
            android:id="@+id/jobsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="#212BF3"
            android:text="Jobs"/>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        />


</LinearLayout>